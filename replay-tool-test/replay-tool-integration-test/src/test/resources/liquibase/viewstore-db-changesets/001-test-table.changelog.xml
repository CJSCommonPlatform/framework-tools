<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="test-store-001" author="TechPod"
               logicalFilePath="001-test-table.changelog.xml">

        <createTable tableName="test">
            <column name="test_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="data" type="TEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint tableName="test"
                             columnNames="test_id"
                             constraintName="unique_test_id_"/>

        <createTable tableName="document">
            <column name="document_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="test_id" type="UUID">
                <constraints foreignKeyName="fk_document_id_test_id"
                             referencedTableName="test"
                             referencedColumnNames="test_id"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>
